<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_21"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08CA60"
    android:clipToOutline="true">

    <!-- 중앙 상단에 배치된 이미지 -->
    <ImageView
        android:id="@+id/cleanLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/make_it_clean"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:contentDescription="Make It Clean 로고" />
    <LinearLayout
        android:id="@+id/bottomImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/loginSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_first_second"
            android:adjustViewBounds="true"
            android:contentDescription="login_second" />

        <ImageView
            android:id="@+id/loginThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="login_third"
            android:src="@drawable/login_first_third" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_first_forth"
            android:adjustViewBounds="true"
            android:contentDescription="login_forth" />
    </LinearLayout>

</RelativeLayout>

