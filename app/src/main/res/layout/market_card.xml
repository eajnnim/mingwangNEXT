<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_market"
    android:layout_width="0dp"
    android:layout_height="107dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="#08CA60"
    app:cardElevation="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/guideline_market_top">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!-- 1) 왼쪽 코인 아이콘 -->
        <ImageView
            android:id="@+id/iv_coin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/main_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- 2) 포인트 숫자 -->
        <TextView
            android:id="@+id/tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="135"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintBaseline_toBaselineOf="@id/iv_coin"
            app:layout_constraintStart_toEndOf="@id/iv_coin"
            android:layout_marginStart="8dp"/>

        <!-- 3) 보유 포인트 라벨 -->
        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보유 포인트"
            android:textSize="12sp"
            android:textColor="#CCFFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tv_points"
            app:layout_constraintStart_toStartOf="@id/tv_points"/>

        <!-- 4) 오른쪽 상단 작은 영어 문구 -->
        <TextView
            android:id="@+id/tv_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make it Clean for"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 5) 오른쪽 큰 타이틀 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그린마켓"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintBaseline_toBottomOf="@id/iv_coin"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
