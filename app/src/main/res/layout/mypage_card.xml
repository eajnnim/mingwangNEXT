<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="16dp">

    <!-- 전체 카드를 CardView 로 감싸도 좋습니다 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#E8F5E9"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 1. 원형 프로그레스 인디케이터 + 중앙 텍스트 + 레벨 -->
            <FrameLayout
                android:id="@+id/progress_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/circularProgress"
                    style="@style/Widget.MaterialComponents.CircularProgressIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:translationX="25dp"
                    android:translationY="50dp"
                    app:indicatorSize="60dp"
                    android:progress="67"
                    android:max="100"
                    app:trackColor="#B2DFDB"
                    app:indicatorColor="#00C853" />

                <!-- 중앙에 글자 -->
                <TextView
                    android:id="@+id/levelInitial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="고"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:translationY="-30dp"/>

                <!-- 아래에 Lv.2 -->
                <TextView
                    android:id="@+id/lvText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lv. 2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#00C853"
                    android:layout_gravity="bottom|center_horizontal"
                    android:translationY="-60dp"/>
            </FrameLayout>

            <!-- 2. 가운데 유저명 / EXP -->
            <LinearLayout
                android:id="@+id/centerInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/progress_container"
                app:layout_constraintTop_toTopOf="@id/progress_container"
                app:layout_constraintBottom_toBottomOf="@id/progress_container"
                app:layout_constraintWidth_percent="0.4"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고연오 님"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>

                <TextView
                    android:id="@+id/expText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXP 135 / 200"
                    android:textSize="16sp"
                    android:textColor="#424242"/>
            </LinearLayout>

            <!-- 3. 오른쪽 퍼센티지 -->
            <LinearLayout
                android:id="@+id/rightInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/progress_container"
                app:layout_constraintBottom_toBottomOf="@id/progress_container"
                app:layout_constraintWidth_percent="0.3">

                <TextView
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67.5%"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>

                <TextView
                    android:id="@+id/toNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="다음 레벨까지"
                    android:textSize="14sp"
                    android:textColor="#424242"/>
            </LinearLayout>

            <!-- 4. 하단 Last Throw 배너 -->
            <LinearLayout
                android:id="@+id/lastThrowBanner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/progress_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18시간 전 고려대학교 민주광장 자유마루"
                    android:textSize="14sp"
                    android:textColor="#212121"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last "
                    android:textSize="14sp"
                    android:textColor="#00C853"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Throw!"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#00C853"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
